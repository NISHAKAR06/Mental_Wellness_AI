# Production Environment Variables for Mental Wellness AI Backend

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-app.herokuapp.com,your-app.vercel.app,localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,https://your-frontend-domain.netlify.app
CORS_ALLOW_ALL=false

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database

# API Keys
GEMINI_API_KEY=your-gemini-api-key

# AI Service URL (Railway deployment)
AI_SERVICE_URL=https://your-ai-service.railway.app

# Optional: Redis for session cache
REDIS_URL=redis://username:password@host:port

# Security
DJANGO_SETTINGS_MODULE=backend.settings
